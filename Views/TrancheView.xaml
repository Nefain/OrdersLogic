<Window x:Class="OrdersLogic.Views.TrancheView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersLogic.Views"
        mc:Ignorable="d"
        Title="TrancheView" Height="210" Width="528">
    <Grid x:Name="AddNewTranche">
        <Label  Content="Дата" HorizontalAlignment="Left" Height="28" Margin="53,20,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Сумма" HorizontalAlignment="Left" Height="28" Margin="53,80,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="TrancheSumTextBox" HorizontalAlignment="Left" Height="28" Margin="264,80,0,0" TextWrapping="Wrap" Text="{Binding Sum, Mode=TwoWay}" VerticalAlignment="Top" Width="200"/>
        <DatePicker x:Name="TrancheDatePicker" HorizontalAlignment="Left" Height="28" Margin="264,20,0,0" SelectedDate="{Binding TrancheDate, Mode=TwoWay}" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="AddNewTrancheButton" Content="Добавить" HorizontalAlignment="Center" Height="30" Margin="0,136,0,0" VerticalAlignment="Top" Width="150" Click="AddNewTrancheButton_Click"/>
    </Grid>
</Window>
